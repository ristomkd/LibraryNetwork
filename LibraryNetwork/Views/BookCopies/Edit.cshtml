@model LibraryNetwork.Models.BookCopy

@{
    ViewData["Title"] = "Edit Copy";
}

<h1 class="page-header"><i class="bi bi-pencil me-2"></i>Edit Book Copy</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label fw-semibold">Book</label>
                        <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId"></select>
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InventoryCode" class="form-label fw-semibold">Inventory Code</label>
                        <input asp-for="InventoryCode" class="form-control" />
                        <span asp-validation-for="InventoryCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PricePerDay" class="form-label fw-semibold">Price Per Day</label>
                        <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsAvailable" />
                        <label class="form-check-label" asp-for="IsAvailable">Available</label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-lib-primary">
                            <i class="bi bi-check-lg me-1"></i>Save
                        </button>
                        <a asp-action="Index" class="btn btn-lib-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
