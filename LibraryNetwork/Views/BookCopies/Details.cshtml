@model LibraryNetwork.Models.BookCopy

@{
    ViewData["Title"] = "Copy Details";
}

<h1 class="page-header"><i class="bi bi-journal-text me-2"></i>Copy Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Inventory Code</dt>
                    <dd class="col-sm-8"><code>@Model.InventoryCode</code></dd>

                    <dt class="col-sm-4">Book</dt>
                    <dd class="col-sm-8">@Model.Book?.Title</dd>

                    <dt class="col-sm-4">Library</dt>
                    <dd class="col-sm-8">@Model.Library?.Name</dd>

                    <dt class="col-sm-4">Price/Day</dt>
                    <dd class="col-sm-8">@(Model.PricePerDay?.ToString("C") ?? "—")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsAvailable)
                        {
                            <span class="badge badge-available">Available</span>
                        }
                        else
                        {
                            <span class="badge badge-unavailable">On Loan</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-lib-outline">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>
    </div>
</div>
