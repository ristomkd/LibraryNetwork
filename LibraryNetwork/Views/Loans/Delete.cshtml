@model LibraryNetwork.Models.Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<h1 class="page-header text-danger"><i class="bi bi-trash me-2"></i>Delete Loan</h1>

<div class="alert alert-danger alert-lib">
    <i class="bi bi-exclamation-triangle me-1"></i>
    Are you sure you want to delete this loan record?
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Book</dt>
                    <dd class="col-sm-8">@Model.BookCopy?.Book?.Title</dd>

                    <dt class="col-sm-4">Member</dt>
                    <dd class="col-sm-8">@Model.Member?.FirstName @Model.Member?.LastName</dd>

                    <dt class="col-sm-4">Borrowed</dt>
                    <dd class="col-sm-8">@Model.BorrowDate?.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Due</dt>
                    <dd class="col-sm-8">@Model.DueDate?.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-lib-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
