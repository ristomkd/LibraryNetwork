@model LibraryNetwork.Models.Loan

@{
    ViewData["Title"] = "New Loan";
}

<h1 class="page-header"><i class="bi bi-plus-circle me-2"></i>Create Loan</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label fw-semibold">Member</label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BookCopyId" class="form-label fw-semibold">Available Copy</label>
                        <select asp-for="BookCopyId" class="form-select" asp-items="ViewBag.BookCopyId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Semester" class="form-label fw-semibold">Semester</label>
                        <select asp-for="Semester" class="form-select"
                                asp-items="Html.GetEnumSelectList<LibraryNetwork.Models.Enums.SemesterType>()">
                        </select>
                    </div>

                    <div class="alert alert-info alert-lib">
                        <i class="bi bi-info-circle me-1"></i>
                        Borrow date will be set to today. Due date = today + 14 days.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-lib-accent">
                            <i class="bi bi-check-lg me-1"></i>Create Loan
                        </button>
                        <a asp-action="Index" class="btn btn-lib-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
