@model LibraryNetwork.Models.Loan

@{
    ViewData["Title"] = "Edit Loan";
}

<h1 class="page-header"><i class="bi bi-pencil me-2"></i>Edit Loan</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BookCopyId" />

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label fw-semibold">Member</label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BorrowDate" class="form-label fw-semibold">Borrow Date</label>
                        <input asp-for="BorrowDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                        <input asp-for="DueDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReturnDate" class="form-label fw-semibold">Return Date</label>
                        <input asp-for="ReturnDate" class="form-control" type="date" />
                        <small class="text-muted">Set a date to mark as returned.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FineAmount" class="form-label fw-semibold">Fine</label>
                        <input asp-for="FineAmount" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsFinePaid" />
                        <label class="form-check-label" asp-for="IsFinePaid">Fine Paid</label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Semester" class="form-label fw-semibold">Semester</label>
                        <select asp-for="Semester" class="form-select"
                                asp-items="Html.GetEnumSelectList<LibraryNetwork.Models.Enums.SemesterType>()">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Status" class="form-select"
                                asp-items="Html.GetEnumSelectList<LibraryNetwork.Models.Enums.LoanStatus>()">
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-lib-primary">
                            <i class="bi bi-check-lg me-1"></i>Save
                        </button>
                        <a asp-action="Index" class="btn btn-lib-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
