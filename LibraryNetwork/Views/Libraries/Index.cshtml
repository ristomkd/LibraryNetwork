@model IEnumerable<LibraryNetwork.ViewModels.LibraryInventoryVM>

@{
    ViewData["Title"] = "Libraries";
}

<h1 class="page-header"><i class="bi bi-building me-2"></i>Libraries</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-lib-accent">
        <i class="bi bi-plus-circle me-1"></i> Add Library
    </a>
</div>

@foreach (var lib in Model)
{
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <div>
                <i class="bi bi-building me-2"></i>
                <strong>@lib.LibraryName</strong>
                @if (!string.IsNullOrEmpty(lib.City) || !string.IsNullOrEmpty(lib.Address))
                {
                    <span style="opacity: .7; font-weight: 400;"> — @lib.City, @lib.Address</span>
                }
            </div>
            <div class="d-flex gap-1">
                <a asp-action="Edit" asp-route-id="@lib.LibraryId" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                <a asp-action="Details" asp-route-id="@lib.LibraryId" class="btn btn-sm btn-lib-primary"><i class="bi bi-eye"></i></a>
                <a asp-action="Delete" asp-route-id="@lib.LibraryId" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (lib.Books == null || !lib.Books.Any())
            {
                <div class="p-4" style="color: var(--lib-muted);">
                    <i class="bi bi-journal-x me-1"></i> No books in this library.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-lib mb-0">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Author</th>
                                <th>Total Copies</th>
                                <th>Available</th>
                                <th>For Loan?</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in lib.Books)
                            {
                                <tr>
                                    <td class="fw-semibold" style="color: var(--lib-primary);">@b.Title</td>
                                    <td>@b.Author</td>
                                    <td>@b.TotalCopies</td>
                                    <td>@b.AvailableCopies</td>
                                    <td>
                                        @if (b.HasAvailable)
                                        {
                                            <span class="badge badge-available"><i class="bi bi-check-circle me-1"></i>Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-unavailable"><i class="bi bi-x-circle me-1"></i>No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}
