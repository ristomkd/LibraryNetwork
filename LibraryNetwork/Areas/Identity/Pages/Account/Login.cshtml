@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center" style="animation: fadeInUp .5s ease both;">
    <div class="col-md-5 col-lg-4">
        <div class="card">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-book-half" style="font-size: 2.5rem; color: var(--lib-accent);"></i>
                    <h2 class="mt-2" style="font-family: var(--lib-font-heading); color: var(--lib-primary); font-weight: 800;">
                        Welcome Back
                    </h2>
                    <p style="color: var(--lib-muted); font-size: .9rem;">Sign in to your LibraryNetwork account</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold" style="color: var(--lib-muted); text-transform: uppercase; font-size: .75rem; letter-spacing: 1px;">Email</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background: var(--lib-peach); border-color: #ddd; color: var(--lib-primary);">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold" style="color: var(--lib-muted); text-transform: uppercase; font-size: .75rem; letter-spacing: 1px;">Password</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background: var(--lib-peach); border-color: #ddd; color: var(--lib-primary);">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <label asp-for="Input.RememberMe" class="form-check-label d-flex align-items-center gap-2" style="color: var(--lib-muted); font-size: .85rem;">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="font-size: .85rem;">Forgot password?</a>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lib-accent btn-lg">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Log In
                    </button>
                </form>

                <div class="text-center mt-4 pt-3" style="border-top: 1px solid rgba(92,61,46,.08);">
                    <p style="color: var(--lib-muted); font-size: .9rem; margin-bottom: 0;">
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
